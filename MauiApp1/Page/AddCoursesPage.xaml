<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Page.AddCoursesPage"
             Title="Add Courses"
             BackgroundColor="#F4F6F9">

    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Heading -->
        <Label Text="รายวิชาทั้งหมด"
               FontSize="26"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#2C3E50" />

        <!-- Search Bar -->
        <SearchBar Placeholder="ค้นหาวิชา"
                   Text="{Binding SearchText}"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="CenterAndExpand" />

        <!-- Course List -->
        <ScrollView>
            <CollectionView ItemsSource="{Binding FilteredCourseList}" HeightRequest="500">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15"
                               Margin="5"
                               BorderColor="#BDC3C7"
                               BackgroundColor="White"
                               CornerRadius="12"
                               HasShadow="True">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="Start" Grid.Column="0">
                                    <Label Text="{Binding CourseName}"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="#34495E"
                                           HorizontalOptions="Start" />
                                    <Label Text="{Binding CourseId, StringFormat='รหัสวิชา: {0}'}"
                                           FontSize="16"
                                           TextColor="#7F8C8D"
                                           HorizontalOptions="Start" />
                                    <Label Text="{Binding Credits, StringFormat='หน่วยกิต: {0}'}"
                                           FontSize="16"
                                           TextColor="#7F8C8D"
                                           HorizontalOptions="Start" />
                                </VerticalStackLayout>

                                <Button Text="+" 
                                        FontSize="24"
                                        BackgroundColor="#27AE60"
                                        TextColor="White"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        CornerRadius="20"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Command="{Binding AddCourseCommand}" 
                                        Grid.Column="1" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>
