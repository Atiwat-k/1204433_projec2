<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Page.DeleteCoursesPage"
             Title="Delete Courses"
             BackgroundColor="#F4F6F9">

    <ScrollView> <!-- Main scroll view for the entire page -->
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Student Profile Section -->
            <Frame Padding="15"
                   Margin="0,0,0,10"
                   BorderColor="#BDC3C7"
                   BackgroundColor="White"
                   CornerRadius="12"
                   HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ข้อมูลนักศึกษา"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalOptions="Center" />
                    
                    <Label Text="{Binding StudentProfile.Name}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#34495E" />
                    
                    <Label Text="{Binding StudentProfile.Major, StringFormat='สาขา: {0}'}"
                           FontSize="16"
                           TextColor="#7F8C8D" />
                    
                    <Label Text="{Binding StudentProfile.Faculty, StringFormat='คณะ: {0}'}"
                           FontSize="16"
                           TextColor="#7F8C8D" />
                    
                    <Label Text="{Binding StudentProfile.Year, StringFormat='ชั้นปี: {0}'}"
                           FontSize="16"
                           TextColor="#7F8C8D" />
                </VerticalStackLayout>
            </Frame>

            <!-- Current Term Section -->
            <Frame Padding="15"
                   Margin="0,0,0,10"
                   BorderColor="#BDC3C7"
                   BackgroundColor="White"
                   CornerRadius="12"
                   HasShadow="True">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="เทอมปัจจุบัน:"
                           FontSize="16"
                           TextColor="#7F8C8D" />
                    <Label Text="{Binding CurrentTerm.TermTerm}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#34495E" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Enrolled Courses Section -->
            <Label Text="รายวิชาที่ลงทะเบียน"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#2C3E50"
                   HorizontalOptions="Center" />

            <!-- Nested ScrollView for the course list only -->
            <Frame Padding="0"
                   BackgroundColor="Transparent"
                   HasShadow="False">
                <CollectionView ItemsSource="{Binding EnrolledCourses}" 
                               HeightRequest="{OnPlatform Android=500, iOS=500, WinUI=500}"
                               SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="15"
                                   Margin="5"
                                   BorderColor="#BDC3C7"
                                   BackgroundColor="White"
                                   CornerRadius="12"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Spacing="8" VerticalOptions="Center" HorizontalOptions="Start" Grid.Column="0">
                                        <Label Text="{Binding CourseName}"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               TextColor="#34495E"
                                               HorizontalOptions="Start" />
                                        <Label Text="{Binding CourseId, StringFormat='รหัสวิชา: {0}'}"
                                               FontSize="16"
                                               TextColor="#7F8C8D"
                                               HorizontalOptions="Start" />
                                        <Label Text="{Binding Credits, StringFormat='หน่วยกิต: {0}'}"
                                               FontSize="16"
                                               TextColor="#7F8C8D"
                                               HorizontalOptions="Start" />
                                    </VerticalStackLayout>

                                    <Button Text="ถอน" 
                                            FontSize="16"
                                            BackgroundColor="#FFEDA71B"
                                            TextColor="White"
                                            WidthRequest="60"
                                            HeightRequest="40"
                                            CornerRadius="20"
                                            VerticalOptions="Center"
                                            HorizontalOptions="End"
                                            
                                            Grid.Column="1" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>